<ContextMenu>:
    cols: 1
    size_hint: None, None
    spacing: 0, 0
    spacer: _spacer
#    row_default_height: 26

#    canvas.before:
#        Color:
#            rgb: 0.7, 0.2, 0.7
#        Rectangle:
#            pos: self.pos
#            size: self.size

    Widget:
        id: _spacer
        size_hint: None, None
        height: 3
        canvas.before:
            Color:
                rgb: 0.2, 0.71, 0.90
            Rectangle:
                pos: self.pos
                size: self.size

<ContextMenuTextItem>:
    padding: 10, 0
    font_size: '14px'
    halign: 'left'
    valign: 'middle'
    size_hint: None, None
    on_size: self.text_size = self.size
    height: 26
#    size: 0, 26

<ContextMenuItem>:
    canvas.before:
        Color:
            rgb: (0.25, 0.25, 0.25) if self.hovered else (0.15, 0.15, 0.15)
        Rectangle:
            pos: self.pos
            size: self.size