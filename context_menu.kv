<ContextMenu>:
    cols: 1
    size_hint: None, None
    spacing: 0, 0
    spacer: _spacer
    on_visible: self._on_visible(args[1])
    on_parent: self._on_visible(self.visible)

#    canvas.before:
#        Color:
#            rgb: 1.0, 0, 0
#        Rectangle:
#            pos: self.pos
#            size: self.size
    Widget:
        id: _spacer
        size_hint: 1, None
        height: 3
        canvas.before:
            Color:
                rgb: 0.2, 0.71, 0.9
            Rectangle:
                pos: self.pos
                size: self.size

<ContextMenuItem>:
    size_hint: None, None
    submenu_arrow: _submenu_arrow
    on_children: self._update_arrows()
    on_parent: self._update_arrows()

    Widget:
        id: _submenu_arrow
        size_hint: None, None
        width: 6
        height: 11
        pos: self.parent.right - self.width - 5, self.parent.y + ((self.parent.height - self.height) / 2)
        canvas.before:
            Translate:
                xy: self.pos
            Color:
                rgb: (1, 1, 1)
            Triangle:
                points: [0,0, self.width,self.height/2, 0,self.height]
            Translate:
                xy: (-self.pos[0], -self.pos[1])


<ContextMenuHoverable>:
    on_hovered: self._on_hovered(args[1])
    canvas.before:
        Color:
            rgb: (0.25, 0.25, 0.25) if self.hovered else (0.15, 0.15, 0.15)
        Rectangle:
            pos: self.pos
            size: self.size


<ContextMenuTextItem>:
    label: _label
    size: self.parent.width, 26
    on_text: self.label.text = self.text

    Label:
        pos: self.parent.pos
        id: _label
        padding: 10, 0
        font_size: '14px'
        halign: 'left'
        valign: 'middle'
        size: self.texture_size
        size_hint: None, 1


<ContextMenuButton@Button>:
    size_hint: None, None
    background_normal: ""
    background_down: ""
    background_color: 0.2, 0.71, 0.9, 1.0
    on_press: self.background_color = 0.10, 0.6, 0.8, 1.0
    on_release: self.background_color = 0.2, 0.71, 0.9, 1.0